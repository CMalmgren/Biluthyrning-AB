
@{
    ViewData["Title"] = "Boka";
}
@model CreateBookingVM

<h2 style="font-weight:bold; padding-bottom: 5px ">Boka en bil</h2>
<br />
<div>
    <form class="form-group" asp-controller="Bookings" asp-action="Book">
        <div class="row" style="position:center">
            <div class="col-3"></div>
            <div class="form-group col-3">
                <label asp-for="SSN"></label>
                <input type="text" asp-for="SSN" class="form-control" />
                <span asp-validation-for="SSN"></span>
            </div>
            <div class="form-group col-3">
                <label asp-for="StartOfRental"></label>
                <input asp-for="StartOfRental" type="text" class="form-control" id="datepicker" />
            </div>
            <div class="col-3"></div>
        </div>
        <div class="row" style="position:center">
            <div class="col-3"></div>
            <div class="custom-control custom-checkbox col-2">
                <input type="checkbox" name="CarType" class="custom-control-input" id="LitenBil" checked="">
                <label class="custom-control-label" for="Liten bil">Liten bil</label>
            </div>
            <div class="custom-control custom-checkbox col-2">
                <input type="checkbox" name="CarType" class="custom-control-input" id="Van" checked="">
                <label class="custom-control-label" for="Van">Van</label>
            </div>
            <div class="custom-control custom-checkbox col-2">
                <input type="checkbox" name="CarType" class="custom-control-input" id="Minibuss" checked="">
                <label class="custom-control-label" for="Minibuss">Minibuss</label>
            </div>
            <div class="col-3"></div>
        </div>

        <div id="resultsLitenBil">
            @foreach (var avCar in Model.AvailableCars.Where(c => c.CarType == "Liten Bil"))
            {
                <div>
                    <p>@avCar.CarType</p>
                    <p>@avCar.DistanceStart</p>
                    <p>@avCar.CarRegistrationNumber</p>
                    <div class="custom-control custom-radio">
                        <input type="radio" id="@avCar.CarRegistrationNumber" name="SelectedCar" class="custom-control-input">
                    </div>
                </div>
            }
        </div>
        <div id="resultsVan">
            @foreach (var avCar in Model.AvailableCars.Where(c => c.CarType == "Van"))
            {
                <div>
                    <p>@avCar.CarType</p>
                    <p>@avCar.DistanceStart</p>
                    <p>@avCar.CarRegistrationNumber</p>
                    <div class="custom-control custom-radio">
                        <input type="radio" id="@avCar.CarRegistrationNumber" name="SelectedCar" class="custom-control-input">
                    </div>
                </div>
            }
        </div>
        <div id="resultsMinibuss">
            @foreach (var avCar in Model.AvailableCars.Where(c => c.CarType == "Minibuss"))
            {
                <div>
                    <p>@avCar.CarType</p>
                    <p>@avCar.DistanceStart</p>
                    <p>@avCar.CarRegistrationNumber</p>
                    <div class="custom-control custom-radio">
                        <input type="radio" id="@avCar.CarRegistrationNumber" name="SelectedCar" class="custom-control-input">
                    </div>
                </div>
            }
        </div>

        <br />
        <input type="submit" value="Boka bil" class="btn btn-secondary" />
    </form>

</div>

@section Script {
    <script type="text/javascript">
        $(function () {
            $("#datepicker").datepicker({ dateFormat: 'dd-mm-yy' });
        });
    </script>
    <script type="text/javascript" src="~/Scripts/ShowCars.js"></script>
}